@model Notemarketplace_front.Database.tblSellerNote

@{
    ViewBag.Title = "Add_Notes";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!--      Add Notes Section -->
<section id="add-note">
@using (Html.BeginForm("Add_Notes", "Client", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    <div class="add-heading">
        <img src="~/Content/img/banner-with-overlay.jpg" class="add-img img-responsive" alt="">
        <div class="centered">Add Notes</div>
    </div>
    <div class="basic-note">


        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="add-sub-heading">Basic Note Details</p>

                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Title*</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your notes title">*@

                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Note Title" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Category*</p>
                        @*<select class="form-control">
                            <option>Select your category</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>*@

                            @Html.DropDownListFor(model => model.Category, ViewBag.NoteCategory as SelectList, "--Select Note Category--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">

                        <p>Upload Notes* <span id="user-report-book">(Please Upload .pdf format)</span></p>
                        <input type="file" style="display: none" id="upload-note" name="uploadNote">
                        <label for="upload-note" class="form-control upload-label text-center">
                            <img src="~/Content/img/upload-file.png" alt="Upload" />
                            <p>Upload note</p>
                        </label>
                    </div>
                </div>

                <div class="col-md-6 col-sm-6">
                    <div class="form-input">

                        <p>Display Picture</p>
                        <input type="file" style="display: none">
                        @Html.ValidationMessageFor(model => model.displayPic, "", new { @class = "text-danger" })
                        <label for="dispic" class="form-control upload-label text-center">
                            <img src="~/Content/img/upload-note.svg" alt="Upload" />
                            <p>Upload display picture</p>
                        </label>
                    </div>
                </div>

                <div class="col-md-12">
                        <div class="form-group">
                            @if (@ViewBag.Message != null)
                            {
                                <label style="color:#ff0000"> @ViewBag.Message</label>
                            }
                        </div>
                </div>

                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Type</p>
                        @*<select class="form-control">
                            <option>Select your note type</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>*@

                         @Html.DropDownListFor(model => model.NoteType, ViewBag.NoteType as SelectList, "--Select Note Type--", new { @class = "form-control" })
                         @Html.ValidationMessageFor(model => model.NoteType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Number of Pages</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter number of note pages">*@

                        @Html.EditorFor(model => model.NumberofPages, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter number of pages" } })
                        @Html.ValidationMessageFor(model => model.NumberofPages, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-input">
                        <p>Description*</p>
                        @*<textarea class="form-control" id="message" placeholder="Comments Write Here..."></textarea>*@

                        @Html.TextAreaFor(model => model.Description, new { style = "min-height:200px", @class = "form-control", placeholder = "Enter comments" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                </div>

            </div>

        </div>
    </div>
    <div class="institution-information">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="add-sub-heading">Institution Information</p>

                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Country</p>
                        @*<select class="form-control">
                            <option>Select your Country</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>*@

                        @Html.DropDownListFor(model => model.Country, ViewBag.Country as SelectList, "--Select Country--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Institution Name</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your Institution name">*@

                        @Html.EditorFor(model => model.UniversityName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter University name" } })
                        @Html.ValidationMessageFor(model => model.UniversityName, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

        </div>
    </div>

    <div class="course-details">


        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="add-sub-heading">Course Details</p>

                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Course Name</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your course name">*@

                        @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Course name" } })
                        @Html.ValidationMessageFor(model => model.Course, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Course Code</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your course code">*@

                        @Html.EditorFor(model => model.CourseCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Course code" } })
                        @Html.ValidationMessageFor(model => model.CourseCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-6 col-sm-6">
                    <div class="form-input">
                        <p>Professor/Lecturer</p>
                        @*<input type="text" class="form-control" id="name" placeholder="Enter your Professor name">*@

                        @Html.EditorFor(model => model.Professor, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Professor name" } })
                        @Html.ValidationMessageFor(model => model.Professor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="selling-information">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="add-sub-heading">Selling Information</p>

                </div>
                <div class="col-md-6 inside">
                    <div class="col-md-12">
                        <div class="form-input">
                            <p>Sell For*</p>

                            @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="free">*@
                            @Html.RadioButtonFor(model => model.IsPaid, false, new { htmlAttributes = new { @class = "form-control", @checked = true, @id = "inlineRadio1" } })
                            <label class="form-check-label" for="inlineRadio1">Free</label>

                            @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="paid">*@
                            @Html.RadioButtonFor(model => model.IsPaid, true, new { htmlAttributes = new { @class = "form-control", @id = "inlineRadio2" } })
                            <label class="form-check-label" for="inlineRadio1">Paid</label>

                            @Html.ValidationMessageFor(model => model.IsPaid, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <p>Selling Price</p>

                            @Html.EditorFor(model => model.SellingPrice, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter price" } })
                            @Html.ValidationMessageFor(model => model.SellingPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">

                    <div class="form-input">

                        <p>Note Preview</p>
                        @*<input type="file" style="display: none">*@
                        @Html.TextBoxFor(model => model.notePreview, new { @id = "upload-preview", type = "file", style = "display:none", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.notePreview, "", new { @class = "text-danger" })
                        <label for="upload-preview" class="form-control upload-label text-center">
                            <img src="~/Content/img/upload-note.svg" alt="Upload" />
                            <p>Upload a file</p>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="add-note-action">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-general btn-work btn-add-note " href="#about" title="Sell Book" role="button">SAVE</a>
                    <div class="col-md-12">
                        <button class="btn btn-general btn-work btn-add-note">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</section>
<!--      Add Notes Section Ends -->
