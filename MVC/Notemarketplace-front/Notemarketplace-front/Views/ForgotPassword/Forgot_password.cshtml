@model Notemarketplace_front.Models.ForgotPass
@{
    ViewBag.Title = "Forgot_password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm())
{

@Html.AntiForgeryToken()
<!-- Forgot Section -->
<section id="forgot" class="forgot-overlay">
    <div class="forgot-parent">
        <div class="forgot-child">
            <img class="img-responsive" src="~/Content/img/top-logo.png" alt="">
            <div class="forgot-details">
                <div class="text-center">
                    <p>Forgot Password</p>
                    <p>Enter your email address to reset your password</p>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-input dis">
                                <p>Email*</p>
                                <input type="text" class="form-control" id="email" placeholder="Enter email">
                            </div>
                        </div>
                        <div class="col-md-12">

                        <div class="form-group error">
                            @if (@ViewBag.NotValidUser != null)
                             {
                                <label style="color:#A94442"> @ViewBag.NotValidUser</label>
                             }
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-input dis">

                                <br />
                                <Button class="form-control">
                                    Submit
                                </Button>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div>
                                <p>Done here? <span><a href="/Login/Login">Login</a></span></p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>
</section>
}
<!-- forgot section ends -->

<script type="text/javascript">
    window.onload = window.history.forward(0);  //calling function on window onload
</script>
